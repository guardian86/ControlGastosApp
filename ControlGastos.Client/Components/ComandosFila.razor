@typeparam TItem
@* componente genérico para cualquier tipo de ítem *@

<div class="d-flex gap-1">
    <button class="btn btn-sm btn-primary me-1" @onclick="OnEditClicked"><i class="fa fa-edit"></i></button>
    <button class="btn btn-sm btn-danger" @onclick="OnDeleteClicked"><i class="fa fa-trash"></i></button>
</div>

@code {
    [Parameter]
    public TItem? Item { get; set; } // El objeto de la fila (ej. TipoGastoDto)

    [Parameter]
    public EventCallback<TItem> OnEdit { get; set; } // Evento para notificar la edición

    [Parameter]
    public EventCallback<TItem> OnDelete { get; set; } // Evento para notificar la eliminación

    private async Task OnEditClicked()
    {
        if (Item != null && OnEdit.HasDelegate)
        {
            await OnEdit.InvokeAsync(Item);
        }
    }

    private async Task OnDeleteClicked()
    {
        if (Item != null && OnDelete.HasDelegate)
        {
            await OnDelete.InvokeAsync(Item);
        }
    }
}